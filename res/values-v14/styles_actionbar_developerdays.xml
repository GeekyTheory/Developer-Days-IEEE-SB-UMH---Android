<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Actionbar_developerdays" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_actionbar_developerdays</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Actionbar_developerdays</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Actionbar_developerdays</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Actionbar_developerdays</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Actionbar_developerdays</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Actionbar_developerdays</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_actionbar_developerdays</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_actionbar_developerdays</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Actionbar_developerdays</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Actionbar_developerdays.Widget</item>
    </style>

    <style name="ActionBar.Solid.Actionbar_developerdays" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_actionbar_developerdays</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_actionbar_developerdays</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_actionbar_developerdays</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Actionbar_developerdays</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="ActionBar.Transparent.Actionbar_developerdays" parent="@style/Widget.Sherlock.ActionBar">
        <item name="android:background">@drawable/ab_transparent_actionbar_developerdays</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Actionbar_developerdays</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Actionbar_developerdays.Widget" parent="@style/Theme.Sherlock">
        <item name="android:popupMenuStyle">@style/PopupMenu.Actionbar_developerdays</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Actionbar_developerdays</item>
    </style>

</resources>